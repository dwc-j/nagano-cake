<div class="container">
  <div class="row">
    <p class="col-2 font-weight-bold bg-secondary text-light text-center m-5 h4">
      配送先編集
    </p>
  </div>

  <div class="row">
    <div class="col-12">
      <%= render 'layouts/errors', obj: @address %>
      <%= form_with model: @address, url: public_address_path, method: :patch, local: true do |f| %>
        <table>
          <thead>
            <tr>
              <th class="w-25"></th>
              <th class="w-25"></th>
              <th class="w-25"></th>
              <th class="w-25"></th>
            </tr>
          </thead>
          <thead>
            <tr>
              <td><%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "mr-5" %></td>
              <td><%= f.text_field :postal_code, class: "form-control" %></td>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <td><%= f.label :address, "住所" %></td>
              <td colspan="2"><%= f.text_field :address, class: "form-control" %></td>
              <td></td>
            </tr>
            <tr>
              <td><%= f.label :name, "宛名" %></td>
              <td><%= f.text_field :name, class: "form-control" %></td>
              <td></td>
              <td><%= f.submit :変更内容を保存, class: "btn btn-success ml-4" %></td>
            </tr>
          </thead>
        </table>
      <% end %>
    </div>
  </div>
</div>