<div class="container">
  <div class="row">
    <p class="col-2 font-weight-bold bg-secondary text-light text-center m-5 h4">
      配送先編集
    </p>
  </div>

<div class="row">
  <div class="col-12">
  <%= render 'layouts/errors', obj: @address %>
  <%= form_with model: @address, url: public_address_path(@address), method: :patch, local: true do |f| %>
  <table>
    <tr>
      <th><%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "mr-5" %></th>
      <td><%= f.text_field :postal_code, class: "form-control" %></td>
    </tr>
    <tr>
      <th><%= f.label :address, "住所" %></th>
      <td><%= f.text_field :address, class: "form-control" %></td>
    </tr>
    <tr>
      <th><%= f.label :name, "宛名" %></th>
      <td><%= f.text_field :name, class: "form-control" %></td>
      <td><%= f.submit :変更内容を保存, class: "btn btn-success ml-4" %></td>
    </tr>
  </table>
  <% end %>
  </div>
</div>
</div>