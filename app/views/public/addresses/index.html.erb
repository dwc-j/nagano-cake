<div class="container">
  <div class="row">
    <p class="col-2 font-weight-bold bg-secondary text-light text-center m-5 h5">
      配送先一覧／登録
    </p>
  </div>

<div class="row">
  <div class="col-12">
<%= form_with model: @address, url: public_addresses_path, local: true do |f| %>
  <table>
    <tr>
      <th><%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "mr-5" %></th>
      <td><%= f.text_field :postal_code, placeholder: "0000000", class: "form-control" %></td>
    </tr>
    <tr>
      <th><%= f.label :address, "住所" %></th>
      <td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control w-100" %></td>
    </tr>
    <tr>
      <th><%= f.label :name, "宛名" %></th>
      <td><%= f.text_field :name, placeholder: "令和道子", class: "form-control" %></td>
      <td><%= f.submit :新規登録, class: "btn btn-success ml-4" %></td>
    </tr>
  </table>

  </div>
  <% end %>

  <table class='table table-hover table-inverse'>
  <thead class="thead-dark">
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>名前</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>