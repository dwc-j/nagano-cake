<div class="container">
  <div class="row">
    <p class="col-3 font-weight-bold bg-secondary text-light text-center m-5 h4">
      配送先一覧／登録
    </p>
  </div>

  <%= render '/layouts/errors', obj: @address %>

<div class="row">
  <div class="col-7">
  <%= form_with model: @address, url: public_addresses_path, local: true do |f| %>
  <table>
    <tr>
      <th><%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "mr-5" %></th>
      <td><%= f.text_field :postal_code, placeholder: "0000000", class: "form-control" %></td>
    </tr>
    <tr>
      <th><%= f.label :address, "住所" %></th>
      <td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control", style: "width:220%" %></td>
    </tr>
    <tr>
      <th><%= f.label :name, "宛名" %></th>
      <td><%= f.text_field :name, placeholder: "令和道子", class: "form-control" %></td>
    </tr>
  </table>
  </div>
  <div class="col-1 d-flex align-items-end">
  <%= f.submit :新規登録, class: "btn btn-success ml-4" %>
  <% end %>
  </div>
</div>
</div>
<div class="row d-flex justify-content-between">
  <div class="col-10">
    <table class='table table-hover table-inverse table-bordered mt-4 ml-4'>
      <thead class="thead-light">
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% if @addresses.present? %>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to "編集する", edit_public_address_path(address), class: "btn btn-success mr-2" %>
                <%= link_to "削除する", public_address_path(address), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

