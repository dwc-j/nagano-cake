<div class="container">
  <div class="row">
    <p class="col-3 font-weight-bold bg-secondary text-light text-center m-5 h4">
      配送先一覧／登録
    </p>
  </div>

  <%= render '/layouts/errors', obj: @address %>

  <div class="row">
    <div class="col-10">
      <%= form_with model: @address, url: public_addresses_path, local: true do |f| %>
        <table class="ml-4">
          <thead>
            <tr>
              <th class="w-25"></th>
              <th class="w-25"></th>
              <th class="w-25"></th>
              <th class="w-25"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "mr-5" %></td>
              <td><%= f.text_field :postal_code, placeholder: "0000000", class: "form-control" %></td>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <td><%= f.label :address, "住所" %></td>
              <td colspan="2"><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control" %></td>
              <td></td>
            </tr>
            <tr>
              <td><%= f.label :name, "宛名" %></td>
              <td><%= f.text_field :name, placeholder: "令和道子", class: "form-control" %></td>
              <td></td>
              <td>
                <%= f.submit :新規登録, class: "btn btn-success ml-4" %>
              </td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>


  <div class="row">
    <div class="col-10">
      <% if current_customer.addresses.exists? %>
      <table class='table table-hover table-inverse table-bordered mt-4 ml-4'>
        <thead class="thead-light">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th class="w-25"></th>
          </tr>
        </thead>
        <tbody>
            <% @addresses.each do |address| %>
              <tr>
                <td><%= address.postal_code %></td>
                <td><%= address.address %></td>
                <td><%= address.name %></td>
                <td>
                  <%= link_to "編集する", edit_public_address_path(address), class: "btn btn-success mr-2" %>
                  <%= link_to "削除する", public_address_path(address), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger" %>
                </td>
              </tr>
            <% end %>
        </tbody>
      </table>
      <% else %>
        <div></div>
      <% end %>
    </div>
  </div>
</div>