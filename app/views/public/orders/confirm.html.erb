<div class="container">
  <div class="row">
    <p class="col-2 font-weight-bold bg-secondary text-light text-center m-5 h4">
      注文情報確認
    </p>
  </div>

  <div class="row">
    <div class="col-9">
<table class="table table-bordered">
  <thead class="bg-light">
	<tr>
	  <th>商品名</th>
	  <th>単価(税込)</th>
	  <th>数量</th>
	  <th>小計</th>
  </tr>
  </thead>
  <tbody>
  <% total = 0 %> <!--totalを0にする-->
  <% @cart_items.each do |cart_item| %>
    <tr>
     	<td>
        <%= image_tag cart_item.item.image, size: "50x30", class: "img-fluid", alt: "image" %>
        <%= cart_item.item.name %>
     	</td>
     	<td class="align-middle"><%= number_to_currency(cart_item.item.add_tax_price, unit: "¥", strip_insignificant_zeros: true) %></td>
     	<td class="align-middle"><%= cart_item.amount %></td>
      <td class="align-middle">
        <% subtotal = cart_item.item.add_tax_price * cart_item.amount %>
        <%= number_to_currency(subtotal, unit: "¥", strip_insignificant_zeros: true) %>
      </td>
    </tr>
    <% total += subtotal %>
  <% end %>
</table>
</div>

<div class="col-3">
<table class="table table-bordered">
	<tr>
    <th class="bg-light">送料</th>
    <% @order.shipping_fee = 800 %>
    <td><%= number_to_currency(@order.shipping_fee, unit: "¥", strip_insignificant_zeros: true) %></td>
  </tr>
  <tr>
    <th class="bg-light">商品合計</th>
    <td><%= number_to_currency(total, unit: "¥", strip_insignificant_zeros: true) %></td>
  </tr>
  <tr>
    <th class="bg-light">請求金額</th>
    <% @order.total_payment = @order.shipping_fee + total %>
    <td><%= number_to_currency(@order.total_payment, unit: "¥", strip_insignificant_zeros: true) %></td>
  </tr>
</table>
</div>
</div>

<div class="row d-flex justify-content-center mt-4">
  <div class="col-7 border border-dark">

<table class="table table-borderless">
  <tr>
    <th class="lead font-weight-bold">支払方法</th>
    <td><%= @order.payment_method %></td>
  </tr>
  <tr>
    <th class="lead font-weight-bold">お届け先</th>
    <td>〒<%= @order.postal_code %><br>
      <%= @order.address %><br>
      <%= @order.name %>
    </td>
  </tr>
</table>
</div>
</div>
<div class="m-4 d-flex justify-content-center">
<%= form_with model: @order, url: public_orders_path, method: :post, local: true do |f| %>
  <%= f.hidden_field :customer_id %>
  <%= f.hidden_field :shipping_fee %>
  <%= f.hidden_field :total_payment %>
  <%= f.hidden_field :payment_method %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :address %>
  <%= f.hidden_field :postal_code %>
  <%= f.hidden_field :status %>
  <%= f.submit "注文を確定する", class: "btn btn-success btn-lg" %>
<% end %>
</div>