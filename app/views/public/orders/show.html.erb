<h5>注文履歴詳細</h5>

<span>注文情報</span>
<table>
	<tr>
    <th>注文日</th>
    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td>
      〒<%= @order.postal_code %></br>
      <%= @order.address %></br>
      <%= @order.name %>
    </td>
  </tr>
  <tr>
    <th>支払方法</th>
    <td><%= @order.payment_method %></td>
    <th>ステータス</th>
    <td><%= @order.status %></td>
  </tr>
</table>

<span>請求情報</span>
<table>
	<tr>
    <th>商品合計</th>
    <td><%= number_to_currency(@order.total_payment, unit: "", strip_insignificant_zeros: true) %></td>
  </tr>
  <tr>
    <th>配送料</th>
    <td><%= number_to_currency(@order.shipping_fee, unit: "", strip_insignificant_zeros: true) %></td>
  </tr>
  <tr>
    <th>ご請求額</th>
    <td><%= number_to_currency(@order.total_payment + @order.shipping_fee, unit: "", strip_insignificant_zeros: true) %></td>
  </tr>
</table>

<span>注文内容</span>
<table>
	<tr>
	  <th>商品</th>
	  <th>単価(税込)</th>
	  <th>個数</th>
	  <th>小計</th>
  </tr>
  <% @order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.item.name %></td>
     	<td>
     	  <% price_taxin = order_detail.item.add_tax_price %>
     	  <%= number_to_currency(price_taxin, unit: "", strip_insignificant_zeros: true) %>
     	</td>
     	<td><%= order_detail.amount %></td>
      <td>
        <% subtotal = price_taxin * order_detail.amount %>
        <%= number_to_currency(subtotal, unit: "", strip_insignificant_zeros: true) %>
      </td>
    </tr>
  <% end %>
</table>