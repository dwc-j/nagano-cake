<h1>会員情報の編集</h1>

<%= form_with(model: @costomer) do |form| %>
  <div class="field">
    <%= form.label :last_name, '氏名' %>
    <%= form.text_field :last_name %>
  </div>

  <div class="field">
    <%= form.label :first_name_kana, 'フリガナ' %>
    <%= form.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= form.label :postal_code, '郵便番号' %>
    <%= form.text_field :postal_code %>
  </div>

  <div class="field">
    <%= form.label :address, '住所' %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :telephone_number, '電話番号' %>
    <%= form.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= form.label :email, 'メールアドレス' %>
    <%= form.text_field :email %>
  </div>

  <div class="actions">
    <%= form.submit '編集内容を保存' %>
  </div>
  
<% end %>
