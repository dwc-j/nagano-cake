<div class='container'>
  <div class='row'>
    <div class='col-3 mt-5'>
			<div>
				<%= render 'layouts/genre', genres: @genres %>
			</div>
		</div>



    <div class='col-9 mt-5'>
      <% if @results.empty? %>
  <p class="font-weight-bold d-flex justify-content-center">検索した商品は見つかりませんでした。</p>
<% else %>
    	<div class="my-3"><span class="h2">商品一覧</span> <span>(全<%= @results.count %>件)</span></div>
    	<div class="container">
      	<div class="row">
		    <% @results.each do |item| %>
			    <div class="mr-1">
				    <%= link_to public_item_path(item) do %>
				    <%= image_tag item.image, size: "200x150" %>
			      <% end %></br>
			      <p class="ml-2 mt-2 font-weight-bold"><%= item.name %></p>
			    	<p class="ml-2 font-weight-bold">￥<%= number_to_currency(item.price, unit: "", strip_insignificant_zeros: true) %></p>
		    	</div>
	    	<% end %>
	      </div>
      </div>


     <div class="d-flex justify-content-center">
  		<p>
    		<%= paginate @results, theme: 'bootstrap-5' %>
  		</p>
 		</div>

		</div>
		<% end %>
	</div>
</div>

</div>