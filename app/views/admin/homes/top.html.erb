<div class="container">
  <div class="row">
    <p class="col-2 font-weight-bold bg-secondary bg-secondary text-light text-center m-5 h5">
      商品一覧
    </p>
  </div>
<div>
  
<div class="container">
  <div class="col-9 mx-auto">
  <table class='table'>
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <%= @orders.each do |order| %>
        <td>
          <%= link_to admin_order_path(order) do %>
            <%= order.crated_at %>
          <% end %>
        </td>
        <td><%= order.customer.name %></td>
        <td><%= order.order_details.amount %></td>
        <td><%= order.order.detaiils.making_status %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
  
  <div class="center-block">
    <%= paginate @orders, theme: 'bootstrap-5' %>
  </div>
  </div>
</div>