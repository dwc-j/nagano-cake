<h2>注文履歴一覧</h2>
<table class='table'>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <%= @orders.each do |order| %>
      <td>
        <%= link_to admin_order_path(order) do%>
          <%= order.crated_at %>
        <% end %>
      </td>
      <td><%= order.customer.name %></td>
      <td><%= order.order_details.amount %></td>
      <td><%= order.order.detaiils.making_status %></td>
      <% end %>
    </tr>
  </tbody
</table>

<div class="c enter-block"><%= paginate @orders, theme: 'bootstrap-5' %></div>