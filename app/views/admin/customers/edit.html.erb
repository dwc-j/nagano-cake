<div class="container">
  <div class="row">
    <p class="col-4 font-weight-bold bg-secondary text-light text-center m-5 h4">
      <%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集
    </p>
    <p class="col-6 mt-5 text-right">
      <%= link_to '会員一覧ページに戻る', admin_customers_path, class: 'btn btn-outline-dark' %>
    </p>
  </div>
</div>

<div class="container">
  <div class="row d-flex justify-content-center">
  <div class="col-7 d-flex justify-content-center align-items-center border rounded p-3 shadow">
    <%= render 'layouts/errors', obj: @customer %>
    <%= form_with model: @customer, url: admin_customer_path(@customer) do |f| %>

  <div class="font-weight-bold mt-3 ml-3">
    <%= f.label :氏名 %>
  </div>
   <div class="form-row m-3">
     <div class="form-inline text-secondary">
    <%= f.text_field :last_name, autofocus: true, placeholder: "令和", class:"mr-4 form-control" %>
    <%= f.text_field :first_name, placeholder: "道子", class:"form-control" %>
    </div>
    </div>


  <div class="font-weight-bold mt-3 ml-3">
    <%= f.label :フリガナ %>
  </div>
  <div class="form-row m-3">
    <div class="form-inline text-secondary">
    <%= f.text_field :last_name_kana, placeholder: "レイワ", class:"mr-4 form-control" %>
    <%= f.text_field :first_name_kana, placeholder: "ミチコ", class:"form-control" %>
  </div>
  </div>



  <div class="font-weight-bold mt-3 ml-3 form-group">
    <%= f.label :postal_code, "郵便番号" %>
    </div>
    <div class="form-row m-3">
      <div class="form-inline ">
    <%= f.text_field :postal_code, placeholder: "0000000", class: "form-control w-100" %>
  </div>
  </div>

  <div class="font-weight-bold mt-3 ml-3 form-group">
    <%= f.label :address, "住所" %>
    </div>
    <div class="m-3">
      <div class="form-inline ">
    <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control w-100" %>
  </div>
  </div>

  <div class="font-weight-bold mt-3 ml-3 form-group">
    <%= f.label :telephone_number, "電話番号" %>
    </div>
    <div class="form-row m-3">
      <div class="form-inline ">
    <%= f.text_field :telephone_number, placeholder: "0000000000", class: "form-control w-100" %>
  </div>
  </div>

  <div class="font-weight-bold mt-3 ml-3 form-group">
    <%= f.label :email, "メールアドレス" %>
  </div>
  <div class="m-3">
    <div class="form-inline ">
    <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com", class:"form-control w-100" %>
  </div>
  </div>

  <div class="font-weight-bold mt-3 ml-3 form-group">
    <%= f.label :is_active, "会員ステータス" %>
  </div>
    <div class="form-row m-3">
      <div class="form-inline ">
        <%= f.radio_button :is_active, :true, checked: @customer.is_active, class:"form-control" %>
        <%= label_tag 'is_active_true', '有効', class:"mr-5" %>
        <%= f.radio_button :is_active, :false, checked: !@customer.is_active, class:"ml-5 form-control" %>
        <%= label_tag 'is_active_false', '退会' %>
      </div>
    </div>

  <div class="m-4 d-flex justify-content-center">
    <%= f.submit "変更を保存",class: "btn btn-success form-control w-50" %>
  </div>
<% end %>
</div>
</div>
</div>