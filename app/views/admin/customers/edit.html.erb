<%= form_for(@customer) do |f| %>
  <%= f.label :last_name, "姓" %>
  <%= f.text_field :last_name %>

  <%= f.label :first_name, "名" %>
  <%= f.text_field :first_name %>

  <%= f.label :last_name_kana, "セイ" %>
  <%= f.text_field :last_name_kana %>

  <%= f.label :first_name_kana, "メイ" %>
  <%= f.text_field :first_name_kana %>

  <%= f.label :postal_code, "郵便番号" %>
  <%= f.text_field :postal_code %>

  <%= f.label :address, "住所" %>
  <%= f.text_field :address %>

  <%= f.label :status, "会員ステータス" %><br />
  <%= f.radio_button :status, true %>有効
  <%= f.radio_button :status, false %>退会

  <%= f.submit "変更内容を保存" %>
<% end %>
