<div class="container">
  <div class="row">
    
    <p class="col-3 font-weight-bold bg-secondary text-light text-center m-5 h4">
      ジャンル一覧・追加
    </p>
    
  </div>



  <div class="col-7">
    <%= render 'layouts/errors', obj: @genre %>
    
    <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
      <div class="form-group d-flex justify-content-between text-nowrap mt-3 mb-3">
        <%= f.label :ジャンル名, class: "font-weight-bold mr-5" %>
        <%= f.text_field :name, placeholder: "ジャンル名を入力", class: "form-control name mr-5 ml-5" %>
        <%= f.submit :新規登録, class: 'btn btn-success ml-5' %>
      </div>
    <% end %>
    
  </div>


  <div class="col-4">
    <table class="table">
      
      <thead class="bg-light">
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td>
            <%= link_to edit_admin_genre_path(genre), class: "btn btn-success" do%>
              編集する
            <% end %>
          </td>
          <% end %>
        </tr>
      </tbody>
      
    </table>
    
  </div>
</div>