<h2>商品一覧</h2>

<p>
  <%= link_to "+", new_admin_item_path, class: "btn btn-primary btn-circle m-1 shadow p-3 mb-5 bg-body-tertiary rounded" %>
</p>
<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td>
          <%= link_to admin_item_path(@item) do%>
            <%= item.name %>
          <%= end %>
        </td>
        <td>￥<%= item.price %></td>
        <td><%= item.genre.name %></td>
        <td>
          <%= if item.is_active %>
            <div class="text-success font-weight-bold">販売中</div>
          <% else %>
            <div class="text-muted font-weight-bold">販売停止中</div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= paginate @items, theme: 'bootstrap-5' %></p>
