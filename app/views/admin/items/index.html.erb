<div class="container">
  <div class="row">
    
    <p class="col-2 font-weight-bold bg-secondary text-light text-center m-5 h4">
      商品一覧
    </p>
    
    <p class="col-8 mt-5 text-right">
      <%= link_to "+", new_admin_item_path, class: "btn btn-primary btn-circle shadow" %>
    </p>
    
  </div>
</div>



<div class="container">
  <div class="row">
    <div class="col-9 mx-auto">
      
      <table class='table table-hover table-inverse'>
        
        <thead class="bg-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        
        <tbody>
          
          <% @items.each do |item| %>
          
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to admin_item_path(item) do%>
              <%= item.name %>
              <% end %>
            </td>
            <td>¥<%= number_to_currency(item.price, unit: "", strip_insignificant_zeros: true) %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_active %>
                <div class="text-success font-weight-bold">販売中</div>
              <% else %>
                <div class="text-muted font-weight-bold">販売停止中</div>
              <% end %>
            </td>
          </tr>
          
          <% end %>
          
        </tbody>
        
      </table>
      
    </div>
  </div>
  
  <div class="row d-flex justify-content-center">
    <p>
      <%= paginate @items, theme: 'bootstrap-5' %>
    </p>
  </div>
  
</div>

