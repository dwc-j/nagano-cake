<div class="container">
  <div class="row">
    <p class="col-2 font-weight-bold bg-secondary bg-secondary text-light text-center m-5 h5">
      商品詳細
    </p>
    <p class="col-8 mt-5 text-right">
      <%= link_to '商品一覧ページに戻る', :back, class: 'btn btn-primary' %>
    </p>
  </div>
</div>

<div class="container">
<div class="col-5 mx-auto">
  <%= render 'layouts/errors', obj: @item %>
  <%= form_with model: @item, url: admin_item_path, local:true do |f| %>
    <table>
      <div class="form-group d-flex justify-content-between text-nowrap mt-3 mb-3">
      <%= f.label :商品画像　　　, class: "mr-4" %>
      <%= f.file_field :image, class: "form-control-file image", accept: 'image/*' %>
    </div>
    <div class="form-group d-flex justify-content-between text-nowrap mt-3 mb-3">
      <%= f.label :商品名　　　　, class: "mr-4" %>
      <%= f.text_field :name, placeholder: "商品名を入力", class: "form-control name" %>
    </div>
    <div class="form-group d-flex justify-content-between text-nowrap mt-3 mb-3">
      <%= f.label :商品説明　　　, class: "mr-4" %>
      <%= f.text_area :explanation, rows:'6', placeholder: "商品説明を入力", class: "form-control explanation" %>
    </div>
    <div class="form-group text-nowrap mt-3 mb-3">
      <%= f.label :ジャンル　　　, class: "mr-4" %>
      <%= f.select :genre_id, options_for_select(@genres.map { |g| [g.name, g.id] }, @item.genre_id), {class: ""} %>
    </div>
    <div class="form-group d-flex justify-content-between text-nowrap mt-3 mb-3">
      <%= f.label :税抜価格　　　, class: "mr-4" %>
      <%= f.text_field :price, placeholder: "1000", class: "form-control form-control-sm price" %>円
    </div>
    <div class="form-group">
      <%= f.label :is_active, "販売ステータス　" %>
      <%= f.radio_button :is_active, :true, checked: @item.is_active %>
      <%= label_tag 'is_active_true', '販売中' %>
      <%= f.radio_button :is_active, :false, checked: !@item.is_active %>
      <%= label_tag 'is_active_false', '販売停止' %>
    </div>
    <div class="d-flex justify-content-center">
      <%= f.submit :変更を保存, class: 'btn btn-success btn-lg' %>
    </div>
  <% end %>
</div>
</div>
